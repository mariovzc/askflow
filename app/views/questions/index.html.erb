<div class="questions form-container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <% @questions.each do |question| %>
        <div class="card">
          <div class="card-body">
            <h2 class="title"><%= link_to  question.title, question_path(question) %></h2>
            <span class="user">Pregunt√≥: <strong><%= question.user.email %></strong></span> <br>
            <span class="date">preguntado hace: <%= time_ago_in_words(question.created_at) %></span>
            <hr>
            <div class="box-container">
              <div class="box">
                <span><%= question.votes_for.size %></span>
                <small>Votos</small>
              </div>
              <div class="box">
                <span><%= question.comments.count %></span>
                <small>Respuestas</small>
              </div>
              <div class="box">
                <span><%= question.impressionist_count %></span>
                <small>Visto</small>
              </div>
            </div>
          </div>
        </div> 
        <br>
      <% end %>      
    </div>
  </div>
</div>