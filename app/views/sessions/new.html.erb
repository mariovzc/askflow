<div class="login">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Iniciar Sesión</h1>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> alert-dismissible fade show">
              <%=value%>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
          <%= form_tag sessions_path, method: :post do %>
            <div class="form-group">
              <%= email_field_tag :email, nil, class: 'form-control', placeholder: "Email" %>

            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Contraseña" %>
            </div>
            <div class="actions">
              <%= submit_tag 'Iniciar',  class: "btn btn-primary btn-block btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted text-center">
          <%= link_to 'Registrarse', sign_up_path, class:'nav-link' %>
        </div>
      </div>      
    </div>
  </div>
</div>