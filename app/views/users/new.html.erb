<div class="register">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Registrarse</h1>
          <% if @user.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show">
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "Contraseña" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmar contraseña' %>
            </div>
            <div class="actions">
              <%= f.submit 'Registrarse',  class: "btn btn-primary btn-block btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted text-center">
          <%= link_to 'Iniciar Sesión', log_in_path, class:'nav-link' %>
        </div>
      </div>      
    </div>
  </div>
</div>